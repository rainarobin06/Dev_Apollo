
@{
    ViewBag.Title = "Manage Hospitals";
}

<div ng-controller="manageHospitalsController" class="container">
    <p class="cls-header">Manage hospitals</p>
    <div class="row mb-4">
        <div class="col-6">
            <label class="form-label">
                Search
            </label>
            <input style="width: 90% !important" type="text" class="form-control w-50 m-1" placeholder="Search here" ng-model="searchkey" />
        </div>
        <div class="col-6">

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">S.No</th>
                        <th scope="col">Hostpital Name</th>
                        <th scope="col">Hospital Id</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in AllHospitalsList | filter: searchkey">
                        <td>{{$index+1}}</td>
                        <td>{{data.HospitalName}}</td>
                        <td>{{data.HospitalId}}</td>
                        <td>
                            <button class="btn btn-success btn-sm" ng-click="enabledisableHospital(data.Id,true)" type="button" ng-show="!data.IsActive">Enable</button>
                            <button class="btn btn-danger btn-sm" ng-click="enabledisableHospital(data.Id,false)" type="button" ng-show="data.IsActive">Disable</button>
                            <button class="btn btn-warning btn-sm" ng-click="editHospital(data)" type="button" data-bs-toggle="modal" data-bs-target="#editModal" >Edit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p class="text-danger" ng-if="(AllHospitalsList | filter: searchkey).length == 0">No search records matched</p>
        </div>
    </div>

    <div class="modal" tabindex="-1" id="editModal" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="cls-header m-0">Update Hospital Name</p>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                            <div class="col-md-8 offset-2">
                                <label class="form-label">Hospital Name</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="form.HospitalName" />
                            </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="updateHospitalName()" ng-disabled="!form.HospitalName">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnClose">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>


